<ScreenManagement>:
    StartScreen:
        id: start
        name: 'start'
    ResultScreen:
            name: 'result'
        id: result

<StartScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Origin"
        GridLayout:
            cols: 2
            rows: 1
            TextInput:
                id: origin
                hint_text: "Enter start location"
                text: "TeleSign"
            Button:
                text: "Use current location"
                on_press: root.current_location()
        Label:
            text: "Destination"
        TextInput:
            id: end
            hint_text: "Enter end location"
            text: "242 Keller St Monterey Park"
        Label:
            text: "Describe the place(s) you are looking for"
        TextInput:
            id: name
            hint_text: "Enter a search term or phrase"
            text: 'Home Depot'
        Label:
            text: "How much further are you willing to travel?"
        Slider:
            id: tolerance
            value: 3
            range: (0.0,10.0)
            step: 0.25
        Label:
            text: '%s miles' % float(tolerance.value)
        GridLayout:
            cols: 2
            rows: 1

            Button:
                text: "Reset"
            Button:
                text: "Search!"
                on_press: root.on_press()

<ResultScreen>:
    on_enter:
        root.create_screen()
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            Label:
                text: 'Places'
        BoxLayout:
            orientation: "vertical"
            id: box1
            BoxLayout:
                orientation: "vertical"
                id: results_box
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'

            Button:
                text: "Go Back"
                on_press:
                    root.erase_screen()
                    root.manager.current= 'start'






